<div class="container-fluid">   
  <br>  <p class="text-center">すでに登録をお済みの方は <%= link_to 'こちらへ', new_user_session_path %></p>
  <hr>
    <div class="card">
    <header class="card-header" style="height: 70px;">
      <%= link_to 'ログイン',new_user_session_path, class: "float-right btn btn-outline-primary mt-1" %>
      <h3 class="card-title mt-2" style="text-align: center; color: grey;">新規登録</h3>
    </header>
        <article class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

<!--             <div class="form-group has-error">
                <div class="col-xs-8 form-inline">
                  <label class="col-xs-2 control-label">&nbsp;&nbsp;<div style="color:red;">※</div>お名前&nbsp;</label>
                  <%= f.text_field :username ,class:'form-control',placeholder: "例）山田 太郎"%>
                </div>
            </div> -->

          <div class="form-group has-error">
            <div class="col-sm-3 form-inline">
              <div class="field">
                <label class="col-xs-2 control-label"><div style="color:red;">※</div>ユーザーネーム&nbsp;</label>
                <%= f.text_field :username, autofocus: true%>
              </div>
            </div>
          </div>

          <div class="form-group has-error">
            <label class="col-sm-3 control-label"><h style="color:red;">※</h>メールアドレス</label>
              <div class="col-sm-4">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>
          </div>

            <div class="form-group has-error">
              <label class="col-sm-3 control-label"><h style="color:red;">※</h>パスワード</label>
                <div class="col-sm-4">
                <%= f.password_field :password, autocomplete: "new-password",class:'form-control' %>
                </div>
            </div>

            <div class="form-group has-error">
              <label class="col-sm-3 control-label"><h style="color:red;">※</h>パスワード(確認)</label>
                <div class="col-sm-4">
                <%= f.password_field :password_confirmation, autocomplete: "new-password",class:'form-control' %>
                </div>
            </div>

            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
               <%= f.submit "新規登録する",class:'btn btn-primary btn-lg' %>
               <% end %>
              <%#= render "users/shared/links" %>
              <br>
              <h style="color:red;">※</h>がある箇所ほ必ず入力してください。
              </div>
            </div>

          </form>
        </div>
     
    </div>
<br><br>
