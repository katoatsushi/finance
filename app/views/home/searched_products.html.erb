<div class="container">
	<h2 style="text-align: center;">検査キーワード:<%= @search_key_words %></h2>

	<% if @searched_products != nil  %>
		<% @searched_products.each do |product| %>
			<div>・<%= link_to "#{product.product_name}", product_path(product.id) %></div>
		<% end %>
	<% else %>
		<%= @search_key_words %>でヒットする商品はございませんでした。
	<% end %>

</div>