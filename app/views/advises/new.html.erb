<%= form_for @advise, url: product_advises_path(product_id: params[:product_id]), method: :post do |f| %>

<div class="container">
<div class="col-md-12">
	<div><%= f.label :メリット %></div>
		<%= f.text_area :merit, placeholder: "商品名" %>
	<div><%= f.label :デメリット %></div>
		<%= f.text_area :demerit, placeholder: "商品名"%>
	<%=f.submit '送信！', class: 'btn btn-primary btn-lg btn-block' %>
</div>
</div>
<%end%>

